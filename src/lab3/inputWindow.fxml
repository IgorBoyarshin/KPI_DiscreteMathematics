<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lab3.InputWindow">
   <children>
      <Label text="Генерація двійкових векторів довжини n у антилексикографічному порядку">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <HBox spacing="5.0">
         <children>
            <Label text="Введіть значення n:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="inputN" />
            <Label fx:id="errorN" style="-fx-text-fill: #DD2222;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="5.0">
         <children>
            <Label text="Введіть значення m:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="inputM" />
            <Label fx:id="errorM" style="-fx-text-fill: #DD2222;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#exit" text="Return">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
   </padding>
</VBox>
